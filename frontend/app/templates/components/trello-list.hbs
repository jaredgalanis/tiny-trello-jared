<div class="list">
  <header>
    <div class="row col-12">
    {{input class="form-control col-10" value=list.title placeholder="Enter List Title ..."}}
    {{fa-icon "trash-o" class="text-muted col-2 icon-hover float-right" size=2 click=(action "deleteList" list)}}
    </div>
  </header>
  <ul>
    {{#each list.items as |item|}}
      {{trello-item
        item=item
        click=(action "editItem" item)}}
    {{/each}}
  </ul>
  <footer>
    {{new-item
      newItem=newItem
      list=list
      isAddingItem=isAddingItem
      addItem=(action "addItem")
      cancelAddItem=(action "cancelAddItem")}}
  </footer>
</div>
