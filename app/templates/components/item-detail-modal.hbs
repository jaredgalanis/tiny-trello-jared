<div class="modal fade" id="itemDetailModal" tabindex="-1" role="dialog" aria-labelledby="itemDetailModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">{{input class="form-control" value=item.title placeholder="Add a title"}}</h5>
        <div class="btn-group" role="group" aria-label="modal-btn-controls">
          <button type="button" class="btn btn-primary pull-right" {{action "closeModal"}}>Close</button>
          <button type="button" class="btn btn-danger pull-right" {{action "deleteItem" item}}>Delete</button>
        </div>
      </div>
      <div class="modal-body">
        {{textarea class="form-control" value=item.detail rows="6" placeholder="Add a description"}}
      </div>
    </div>
  </div>
</div>
